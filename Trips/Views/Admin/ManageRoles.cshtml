@model TripsS.ViewModel.ManageRolesViewModel

<h1 class="h3 mb-4 text-gray-800">Manage Roles for @Model.UserId</h1>

<div class="card shadow mb-4">
    <div class="card-body">
        <form asp-action="UpdateRoles" method="post">
            <input type="hidden" name="userId" value="@Model.UserId" />
            <div class="form-group">
                @foreach (var role in Model.AllRoles)
                {
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="role_@role.Name" name="roles" value="@role.Name" @(Model.UserRoles.Contains(role.Name) ? "checked" : "")>
                        <label class="custom-control-label" for="role_@role.Name">@role.Name</label>
                    </div>
                }
            </div>
            <button type="submit" class="btn btn-primary">Update Roles</button>
        </form>
    </div>
</div>
