<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trips</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- SB Admin 2 CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/startbootstrap-sb-admin-2/4.1.4/css/sb-admin-2.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <style>
        /* Zmiana koloru tła na zielony */
        .sb-topnav {
            background-color: #4CAF50 !important;
        }

        /* Zmiana koloru stopki */
        .sb-footer {
            background-color: #4CAF50 !important;
            color: #fff !important;
        }

        /* Styl ikon w nawigacji */
        .navbar-nav .nav-link i {
            margin-right: 5px;
        }

        /* Styl panelu bocznego */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            height: 100%;
            z-index: 1;
            background-color: #fff;
            border-right: 1px solid #dee2e6;
            overflow-y: auto;
        }

        /* Styl elementów w panelu bocznym */
        .sidebar-heading {
            padding: 0.875rem 1.25rem;
            font-size: 1.2rem;
            font-weight: bold;
            text-transform: uppercase;
            color: #6c757d;
        }

        .sidebar .nav-link {
            padding: 0.5rem 1.25rem;
            font-size: 1rem;
            color: #6c757d;
        }

            .sidebar .nav-link i {
                margin-right: 10px;
            }

            .sidebar .nav-link:hover,
            .sidebar .nav-link.active {
                background-color: #f8f9fa;
                color: #343a40;
            }

        .sidebar .collapse .collapse-inner {
            padding-left: 40px;
        }
    </style>
</head>
<body>
    @if(User.IsInRole("Admin"))
    {}
    <nav class="navbar navbar-expand-lg navbar-light bg-light sidebar">
        <div class="container">
            <div class="sidebar-heading">Menu</div>
            <ul class="navbar-nav">
                <!-- Wejście do sekcji "Wycieczki" -->
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Trips" asp-action="Index"><i class="fas fa-hiking"></i> Wycieczki</a>
                </li>
                <!-- Wejście do sekcji "Manage Roles" (tylko dla admina) -->
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index"><i class="fas fa-user-cog"></i> Manage Roles</a>
                    </li>
                }
            </ul>
        </div>
    </nav>
    }
</body>
