@model IEnumerable<TripsS.ViewModel.ReservationViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdClient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTrip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmountOfPeople)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReservationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdClient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTrip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountOfPeople)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReservationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
                @if (User.IsInRole("Admin"))
                {
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdReservation">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdReservation">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdReservation">Delete</a>
            </td>
                }
        </tr>
}
    </tbody>
</table>
